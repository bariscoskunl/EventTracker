@model List<EventViewModel>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<h2 class="mb-4">Sabitlenmiş Etkinlikler</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-lg border-2">
                <div class="card-body">
                    <h5>@item.Title</h5>
                    <p class="text-muted">@item.FormattedDate</p>
                    <p>@item.ShortDescription</p>
                </div>
                <div class="card-footer bg-white border-0 text-end">
                    <a asp-controller="Events" asp-action="Details"
                       asp-route-id="@item.Id"
                       class="btn btn-outline-dark btn-toolbar">
                        View
                    </a>
                </div>
            </div>
        </div>
    }
</div>
