@model EventModel

@{
    ViewData["Title"] = "Yeni Etkinlik";
}

@* Sayfayı ortalayan ana kapsayıcı *@
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            
            <h2 class="mb-4 text-center text-md-start">Yeni Etkinlik Oluştur</h2>

            <div class="card shadow border-1">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Başlık</label>
                            <input asp-for="Title" class="form-control" placeholder="Etkinlik başlığı..." />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Etkinlik hakkında kısa bir bilgi..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label fw-bold">Tarih</label>
                            <input asp-for="Date" type="datetime-local" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex gap-2 pt-2">
                            <button type="submit" class="btn btn-warning px-4 fw-bold">Oluştur</button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">İptal</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>