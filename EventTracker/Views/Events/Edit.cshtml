@model EventModel

@{
    ViewData["Title"] = "Etkinliği Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <h2 class="mb-4">Etkinliği Düzenle</h2>

            <div class="card shadow">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Başlık</label>
                            <input asp-for="Title" class="form-control" placeholder="Etkinlik adını giriniz" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Etkinlik detaylarını yazınız"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label fw-bold">Tarih</label>
                            <input asp-for="Date" type="datetime-local" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-4">
                            <button type="submit" class="btn btn-warning px-4">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary px-4">İptal</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>