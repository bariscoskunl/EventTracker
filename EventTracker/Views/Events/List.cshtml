<div class="container bg-primary pb-3">
    <h1 class="container text-center text-dark mb-4 mt-4">Etkinlik Listesi</h1>
    <table class="table table-striped table-hover bg-light">
        <thead>
            <tr>
                <th class="ps-5">ID</th>
                <th class="ps-5">Başlık</th>
                <th class="text-end pe-5">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Events)
            {
                <tr >
                    <td class="ps-5">@item.Id</td>
                    <td class="ps-5">@item.Title</td>
                    <td class="justify-content-around">
                        <div class="d-flex gap-3 justify-content-end ">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Düzenle</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detaylar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>